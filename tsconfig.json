{
  "include": ["src"],
  "exclude": ["test", "example", "node_modules"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "libs",
    "target": "ES5",
    "module": "umd",
    "jsx": "react",
    "lib": ["es2015"],
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  }
}